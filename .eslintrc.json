{
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_|next" }],
    "no-console": "off",
    "no-undef": "error",
    "prefer-const": "warn",
    "no-var": "error",
    "no-param-reassign": "warn"
  },
  "ignorePatterns": ["node_modules/", "dist/", "build/", "coverage/"]
}
